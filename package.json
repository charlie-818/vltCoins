{
  "name": "vlt-coins",
  "version": "1.0.0",
  "description": "Interconnected Ethereum-Based Stablecoin Suite (vltUSD, vltUSDY, vltUSDe)",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:sepolia": "hardhat run scripts/deploy/sepolia.ts --network sepolia",
    "deploy:goerli": "hardhat run scripts/deploy/goerli.ts --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:goerli": "hardhat verify --network goerli",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test",
    "docs": "solidity-docgen",
    "slither": "echo 'slither not configured in CI'",
    "mythril": "echo 'mythril not configured in CI'",
    "audit": "npm run lint"
  },
  "keywords": [
    "ethereum",
    "stablecoin",
    "defi",
    "erc20",
    "erc4626",
    "yield",
    "algorithmic",
    "collateralized"
  ],
  "author": "vltCoins Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.0.0",
    "@chainlink/contracts": "^0.8.0",
    "solhint": "^4.0.0",
    
    "solidity-docgen": "^0.6.0-beta.25"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
} 